public class MergeSort {

	public static void mergeFunc(int[] inputArray, int[] temporaryArray, int lowerIndex, int middleIndex, int upperIndex) {
		
		
	}
	
	public static void split(int [] inputArray) {
		int size = inputArray.length;
		int lowerIndex = inputArray[0];
		int middleIndex = inputArray[size/2];
		int upperIndex = inputArray[size];
		int[] tempArray = new int[size];
		
		int[] leftArray= new int[lowerIndex+middleIndex];
		int[] rightArray= new int[upperIndex-(middleIndex+1)];
		
		for(int i =lowerIndex;i<=upperIndex;i++) {
			tempArray[i]=inputArray[i];
		}
		
		
	}
	
}
